<%= render "partial/carousel" %>
<div class="container">
	<div class="col-md-8">
	<h1><%= @hotel.name %> 
		<%= run_if(@hotel.active) if user_signed_in? && current_user.admin_flg == true %>
		<br><span class="", style="font-size: 20px;"><%= @hotel.hotel_type %> |  <%= @hotel.room_type %> |
			<i class="fa fa-map-marker" aria-hidden="true"></i><%= @hotel.address %></span></h1>
	    	
			<span><i class="fa fa-users" aria-hidden="true"></i> ゲスト<%= @hotel.accomodate %>人</span> 
		    <span><i class="fa fa-bed" aria-hidden="true"></i> <%= @hotel.bedroom %>寝室</span> 
		    <span><i class="fa fa-bath" aria-hidden="true"></i> バスルーム<%= @hotel.bathroom %></span> 
			<br>
			<br>
			<span><i class="fa fa-file-text-o" aria-hidden="true"></i> 概要<br><%= @hotel.summary %></span>
			<p class="line"></p>
		
		<h3>アメニティ・設備</h3><!-- Amenities -->
			<%= render 'partial/amenity'  %>
		
		<p class="line"></p>

		<h3>ハウスルール</h3><!-- ハウスルール -->
			<%= render 'partial/rule'  %>
		
		<p class="line"></p>
		<% if @hotel.reviews.empty? %>
			<%= link_to "レビュー作成", new_hotel_review_path(@hotel.id), class: "btn btn-primary" %>
		<% else %>
		<h3>レビュー
			<button type="button" class="btn btn-default">
				<%= link_to "全部見る", hotel_reviews_path(@hotel) %>
			</button>
			<button type="button" class="btn btn-default	">
				<%= link_to "レビュー作成", new_hotel_review_path(@hotel) %>
			</button>	
		</h3>
			<%= render 'partial/review' %>
		<% end %>
	</div> <!-- col-md-8 -->

			<br>
			<div class="col-md-4">
			<div id="sidebar" >
				<div id="nav", class="reservation">
						<span class = "price">
						 ¥ <%= @hotel.price.to_s(:currency) %>	
						 </span>/1泊<br>
						 <small>
						 	 過去<%= guest_total(@hotel) %>人のお客様が宿泊しております。
						 </small>
					<% if user_signed_in? %>
							<%= link_to "カレンダー作成へ", 	hotel_reservation_calendar_index_path(@hotel), class: "btn btn-info btn-sm" if current_user.admin_flg == true %>
					<% end %>
					<p class="line"></p>
					<% if @reservation_calendar.empty? || @hotel.stop? %>
						<p>現在、宿泊を受け付けておりません。</p>
					<% else %>
						<%= render 'reservations/form',reservation: @reservation, count: @count %>
					<% end %>
				</div>
			</div>
			<br>
			<!-- side bar -->
			<script>
				var nav = $('#nav'),
				offset = nav.offset();
				$(window).scroll(function () {
				  	if($(window).scrollTop() > offset.top - 20) {
			    		nav.addClass('fixed');
			 	 	} else {
			    		nav.removeClass('fixed');
			  		}
					});
			</script>
			</div> <!-- col-md-4 -->

		<!-- Google Map -->
		<div class="col-md-8 google_map">
				<div id="map"></div>
				<style>
					#map{
						width: 100%;
						height: 400px;
					}
				</style>
			    <script>
			      function initialize() {
			        var mapCanvas = document.getElementById('map');
			        var mapOptions = {
			          center: new google.maps.LatLng(<%= @hotel.latitude %>, <%= @hotel.longitude %>),
			          zoom: 14,
			          mapTypeId: google.maps.MapTypeId.ROADMAP
			        }
			        var map = new google.maps.Map(mapCanvas, mapOptions);

			        var marker = new google.maps.Marker({
			        	position: new google.maps.LatLng(<%= @hotel.latitude %>, <%= @hotel.longitude %>),
			        	title: "stay"
			        });
			        marker.setMap(map);
			      }
			      google.maps.event.addDomListener(window, 'load', initialize);
			    </script>
		</div>
</div>
<div class="block"></div>